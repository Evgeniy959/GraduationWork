@model IEnumerable<HotelAdmin.Models.Entity.RoomTariff>

@{
    ViewData["Title"] = "Index";
    int count = 1 + (ViewBag.CurrentPage - 1) * 10;
}

<h1 class="text-center">Тарифы комнат</h1>

<table class="table table-1">
    <thead>
        <tr class="tab-row">
            <th scope="col">#</th>
            <th scope="col">Номер комнаты</th>
            <th scope="col">Категория</th>
            <th scope="col">Тарифный план</th>
            <th scope="col">Цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="tab-row">
                <th scope="row">@(count++)</th>
                <td>@item.Room.Number</td>
                <td>@item.Room.Category.Name</td>
                <td>@item.TariffPlan.Description</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>
<br />
<nav aria-label="Page navigation example" class="d-flex align-content-center justify-content-sm-center">
    <ul class="pagination">

        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
               <a class="page-link"
               asp-action="Index"
               asp-controller="RoomTariff"
               asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
            </li>
        }

        @for (var i = ViewBag.CurrentPage - 3; i <= ViewBag.CurrentPage + 3; i++)
        {

            @if (i > 0 && i <= ViewBag.TotalPages)
            {
                @if (ViewBag.CurrentPage == i)
                {
            <li class="page-item active">
               <a class="page-link"
               asp-action="Index"
               asp-controller="RoomTariff"
               asp-route-page="@i">@i</a>
            </li>
                }
                else
                {

            <li class="page-item">
               <a class="page-link"
               asp-action="Index"
               asp-controller="RoomTariff"
               asp-route-page="@i">@i</a>
            </li>
                }
            }

        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item">
               <a class="page-link"
               asp-action="Index"
               asp-controller="RoomTariff"
               asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
            </li>
        }

    </ul>
</nav>
