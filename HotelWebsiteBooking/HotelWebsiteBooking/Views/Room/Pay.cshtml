@using Microsoft.Extensions.Options
@inject IOptions<HotelWebsiteBooking.Data.StripeOptions> Stripe
@model HotelWebsiteBooking.Models.Entity.Client

@{
    ViewData["Title"] = "Info";
}

<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h4><strong>@Model.Name!</strong>  You have successfully booked a room <strong>from @ViewBag.Start to @ViewBag.End.</strong></h4>
                    <h4>Booking information will be sent to you shortly.</h4>
                    <div>
                        <form asp-action="Pay" asp-controller="Home" method="post">
                            <article>
                                <label>Сумма: 5.00 руб</label>
                            </article>
                            <script src="//checkout.stripe.com/v2/checkout.js"
                                    class="stripe-button" 
                                    data-key="@Stripe.Value.PublishableKey" 
                                    data-locale="auto" 
                                    data-description="Sample Charge" data-amount="500">

                            </script>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
