@model HotelWebsiteBooking.Models.Entity.Room

@{
    ViewData["Title"] = "Tariff";
}

<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Выберите тариф</h2>
                    <div class="bt-option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Rooms</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-3 media-img-wrapper">
            <a href="">
                <img class="media" src="~/@Model.Category.Photo" alt="Photo" />
            </a>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a href="">
                    <h5 class="card-title">@Model.Category.Name</h5>
                </a>
                <p class="card-text">до @Model.Category.PersonsCount мест</p>
                <p class="card-text">@Model.Category.Square</p>
                <h5>
                    Wi-Fi, кондиционер, телевизор, ванная комната с ванной...
                </h5>
                <br />
                <a asp-controller="Home" asp-action="@Model.Category.Photo.Substring(9).Replace("-sb.jpg", "").Replace("-s.jpeg", "")" class="primary-btn">Подробнее</a>
            </div>
        </div>
    </div>
</div>
<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Tariffs)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="room-item">
                        
                        <div class="ri-text">
                            <h4>@item.TariffPlan.Description</h4>
                            <h3>@(item.Price * ViewBag.Days) Р<span class="room-price">/Price for @ViewBag.Days nights</span></h3>
                            <a asp-controller="Room" asp-action="Booking" asp-route-id="@item.RoomId" asp-route-price="@item.Price" asp-route-tariff="@item.TariffPlan.Description" class="primary-btn">Booking Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
