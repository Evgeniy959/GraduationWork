@model HotelAdmin.Models.Entity.ExtendedRoom

@{
    ViewData["Title"] = "Add";
}

@if (TempData.ContainsKey("Status"))
{
    <div class="alert alert-danger" role="alert">
        <strong>Notification!</strong> @TempData["Status"]
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            <div class="card" style="margin-top:15px">
                <div class="card-header">
                    <h5 class="card-title text-center"> Add new room</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Add" asp-controller="Room" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Number" class="control-label"></label>
                            <input asp-for="Number" class="form-control nav" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                            <input name="Photo" class="form-control" type="file">
                            <span asp-validation-for="@Model.Category.Photo" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <label class="control-label">Сategory</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categorys" class="form-control">
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">TariffPlans</label>
                            <select name="tariffPlans" id="tariffPlans" multiple asp-items="@ViewBag.Tariffs" class="form-control">
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                            <label asp-for="@Model.Tariff.Min(t => t.Price)" class="control-label"></label>
                            <input asp-for="@Model.Tariff.Min(t => t.Price)" class="form-control nav" />
                            <span asp-validation-for="@Model.Tariff.Min(t => t.Price)" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control nav" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" class="form-control btn btn-primary" value="Add room" />
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" asp-controller="Room" class="form-control btn btn-info">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="/lib/chosen/chosen.jquery.js"></script>
    <script>
        $("#tariffPlans").chosen();
    </script>
}
