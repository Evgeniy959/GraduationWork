@model IEnumerable<HotelWebsiteBooking.Models.Entity.RoomDate>

@{
    ViewData["Title"] = "Search";
}

<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Our spare rooms</h2>
                    <div class="bt-option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Rooms</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            @foreach (var date in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="~/@date.Room.Category.Photo" alt="...">
                        <div class="ri-text">
                            <h4>@date.Room.Category.Name</h4>
                            <h3>от @(date.Room.Tariffs.Min(t => t.Price) * ViewBag.Days) Р<span class="room-price">/Price for @ViewBag.Days nights</span></h3>
                            <partial name="_RoomCardPartial" model="date.Room" />
                            <a asp-controller="Room" asp-action="Tariff" asp-route-id="@date.RoomId" asp-route-price="@date.Room.Tariffs.Min(t => t.Price)" class="bk-btn">Выбрать</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
